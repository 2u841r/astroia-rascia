---
interface Props {
  title?: string;
  subTitle?: string;
  highlight?: string;
  index?: boolean;
}

const { title = "", subTitle = "", highlight = "", index = false } = Astro.props;
---

<header class={`hero ${index ? "index" : ""}`}>
  {subTitle && (
    <div class="sub-title">
      {highlight && <span class="highlight">{highlight}</span>}
      {subTitle}
    </div>
  )}
  {title && <h1>{title}</h1>}
  <slot />
</header>